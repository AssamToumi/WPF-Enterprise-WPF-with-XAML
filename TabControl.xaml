<Window x:Class="WPF_Advanced_Controls.TabControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Advanced_Controls"
        mc:Ignorable="d"
        Title="TabControl" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Tab1">Hello this is Tab1</TabItem>
            <TabItem Header="Tab2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name"/>
                        <TextBox Width="80" Height="30"/>
                    </StackPanel>
                    <CheckBox Content="I Like Tabs"></CheckBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Tab3">Hello this is Tab1</TabItem>
        </TabControl>
    </Grid>
</Window>
